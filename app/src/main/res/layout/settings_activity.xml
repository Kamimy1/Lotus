<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo3"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/coral_pink"
            android:elevation="4dp"
            app:titleTextColor="@color/white"
            app:layout_scrollFlags="scroll|enterAlways">
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp">

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="35dp"
            app:cardBackgroundColor="@color/white">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/navImage"
                android:src="@drawable/lotus_small"
                android:scaleType="centerCrop"
            />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/usernameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/capriola"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/capriola"
            android:text="email"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/account_settings"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Tu cuenta"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:fontFamily="@font/capriola"
            android:gravity="center_horizontal"
            android:drawableLeft="@drawable/baseline_person_24"
            />

        <View
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/request_features"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:text="Enviar sugerencia"
            android:textSize="25dp"
            android:fontFamily="@font/capriola"
            android:gravity="center_horizontal"
            android:drawableLeft="@drawable/baseline_app_registration_24"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/report_bugs"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Informar de errores"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:fontFamily="@font/capriola"
            android:gravity="center_horizontal"
            android:drawableLeft="@drawable/baseline_bug_report_24"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/recordatorios"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Recordatorios"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:fontFamily="@font/capriola"
            android:gravity="center_horizontal"
            android:drawableLeft="@drawable/baseline_notifications_24"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/conf_ciclo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Ciclo"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:fontFamily="@font/capriola"
            android:gravity="center_horizontal"
            android:drawableLeft="@drawable/baseline_restart_alt_24"
            />

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/coral_pink"
            android:fontFamily="@font/capriola"
            android:padding="12dp"
            android:text="Cerrar sesiÃ³n"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp" />

    </LinearLayout>





</androidx.drawerlayout.widget.DrawerLayout>